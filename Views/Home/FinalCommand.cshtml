@model OrderBooksViewModels

@{
    ViewBag.Title = "Final Order";
}
    <head>
        <link rel="stylesheet" type="text/css" href="~/css/orderedbooks.css">
        <link rel="stylesheet" type="text/css" href="~/css/universalstyle.css">
    </head>
<body>
    <div class="container">
        <div class="main-area">
            @foreach (var userBooks in Model.UserBooksDB)
            {
                @if (userBooks.NrBooksOrdered > 0)
                {
                    <div>
                        <p>Book: @userBooks.BookToBuy</p>
                        <p>Books Ordered: @userBooks.NrBooksOrdered</p>
                        <p>Total Price:@userBooks.TotalPriceBooks</p>
                    </div>
                }
            }
            <div>
                <a class="buttonuniversal" asp-controller="Home" asp-action="DisplayBooks">List of Books</a>
            </div>
        </div>
    </div>
</body>