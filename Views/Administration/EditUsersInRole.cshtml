@model List<EditUsersInRoleViewModels>

@{ 
    var roleId = ViewBag.roleId;
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/editusersinrole.css">
</head>
<body>
    <div class="container">
        <div class="main-area">
            <div>
                <h2>Add or remove users from this specific role</h2>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <input type="checkbox" asp-for="@Model[i].IsSelected" />
                    <label>@Model[i].UserName</label>
                }
                <button type="submit">Update</button>
                <button><a asp-controller="Administration" asp-action="EditRole" asp-route-id="@roleId">Cancel</a></button>
            </div>
        </div>
    </div>
</body>