@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "List of Roles";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/listroles.css">
</head>
<body>
    <div class="container">
        <div class="main-area">
            <div>
                <p>Want to add a new role ? Press the button:</p>
                <button><a class="stylebutton" asp-action="CreateRole" asp-controller="Administration">Add New Role</a></button>
                <h3>List of Roles:</h3>
                @if (Model.Any())
                {
                    @foreach (var role in Model)
                    {

                        <p>Role Id:@role.Id</p>
                        <p>Role Name:@role.Name</p>

                        <button><a asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit Role</a></button>
                        <form asp-controller="Administration" asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                            <span id="confirmationDeleteSpan_@role.Id" style="display:none">
                                <span>Are you sure, you want to delete the user ?</span>
                                <button type="submit">Yes</button>
                                <button><a href="#" onclick="confirmDelete('@role.Id', false)">No</a></button>
                            </span>
                            <span id="deleteSpan_@role.Id">
                                <button><a href="#" onclick="confirmDelete('@role.Id', true)">Delete</a></button>
                            </span>
                        </form>
                    }
                }
                else
                {
                    <p>No Roles to display !</p>
                    <p>To Create a Role press the button:</p>
                    <button><a class="stylebutton" asp-action="CreateRole" asp-controller="Administration">Create Role</a></button>
                }
            </div>
        </div>
    </div>
</body>