
@model CreateRoleViewModels
@{
    ViewBag.Title = "Create Role";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/registeruser.css">
</head>
<body>
    <div class="container">

        <div class="main-area">
            <h3>Crearea unui nou Rol in companie:</h3>
            <form method="post">
                <div asp-validation-summary="All"></div>
                <label asp-for="RoleName">Numele Rolului: </label>
                <input asp-for="RoleName" />
                <span asp-validation-for="RoleName"></span>
                <br>
                <br>
                <button type="submit" >Creaza Rol</button>
            </form>
        </div>

    </div>
</body>
